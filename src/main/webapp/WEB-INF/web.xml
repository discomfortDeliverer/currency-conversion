<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>simple-servlet</servlet-name>
        <servlet-class>ru.discomfortDeliverer.servlets.SimpleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>simple-servlet</servlet-name>
        <url-pattern>/simple-servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>currency-servlet</servlet-name>
        <servlet-class>ru.discomfortDeliverer.servlets.currency.CurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>currency-servlet</servlet-name>
        <url-pattern>/currency/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>currencies-servlet</servlet-name>
        <servlet-class>ru.discomfortDeliverer.servlets.currency.CurrenciesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>currencies-servlet</servlet-name>
        <url-pattern>/currencies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exchange-servlet</servlet-name>
        <servlet-class>ru.discomfortDeliverer.servlets.exchange.ExchangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exchange-servlet</servlet-name>
        <url-pattern>/exchange</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exchange-rates-servlet</servlet-name>
        <servlet-class>ru.discomfortDeliverer.servlets.exchange.ExchangeRatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exchange-servlet</servlet-name>
        <url-pattern>/exchangeRates</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exchange-rate-servlet</servlet-name>
        <servlet-class>ru.discomfortDeliverer.servlets.exchange.ExchangeRateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exchange-rate-servlet</servlet-name>
        <url-pattern>/exchangeRate</url-pattern>
    </servlet-mapping>
</web-app>

